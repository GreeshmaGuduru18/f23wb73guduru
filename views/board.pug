extends layout

block content
  h1= title
  p Rows: #{query.rows}, Columns: #{query.cols}
  - var rows=Number(query.rows);
  - var cols=Number(query.cols);
  if !Number.isInteger(rows)
    p  Incorrect data entered.For rows and columns, please enter integer values between 1 and 10.
  else if !Number.isInteger(cols)
    p  Incorrect data entered.For rows and columns, please enter integer values between 1 and 10.
  else if rows<1||rows>10
    p  Incorrect data entered.. For rows and columns, please enter integer values between 1 and 10. 
  else if cols<1||cols>10
    p  Incorrect data entered.. For rows and columns, please enter integer values between 1 and 10. 
  else
    table#outer
      - for (let i = 0; i < rows; i++)
        tr#middle
          - for (let j = 0; j < cols; j++)
            - let value = (i === j) ? 1 : (i === j + 1) ? 2 : (i === j - 1) ? i : 0
            td= value